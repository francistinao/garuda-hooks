{
  "name": "garuda-hooks",
  "version": "1.0.0",
  "description": "A zero-dependency React/NextJS hooks: TypeScript-first (strict, no any), SSR-safe browser API usage, consistent tuple/object returns, ESM+CJS output with generated types, Vitest + React Testing Library coverage, and tree-shakeable per-hook entry points.",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "format": "prettier -c \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "format:write": "prettier -w \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "clean": "rimraf dist",
    "build": "rimraf dist && rollup -c",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "typescript-first",
    "ssr-safe",
    "esm",
    "cjs",
    "tree-shakeable",
    "perhook",
    "zero",
    "zero-dependency"
  ],
  "author": "Francis Tin-ao",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "peerDependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "size-limit": "^12.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
